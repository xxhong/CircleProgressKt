<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              tools:context=".MyActivity">

    <com.github.lzyzsd.circleprogresskt.DonutProgress
            android:id="@+id/donut_progress"
            android:layout_width="200dp"
            android:layout_height="200dp"
            custom:donut_finished_color="#0066FF"
            custom:donut_finished_stroke_width="15dp"
            android:backgroundTint="#0066FF"
            android:backgroundTintMode="add"
            custom:donut_inner_drawable="@drawable/ic_vector_star_black_48dp"
            custom:donut_show_text="false"
            custom:donut_unfinished_color="#f5f5f5"
            custom:donut_unfinished_stroke_width="15dp"/>
    <com.github.lzyzsd.circleprogresskt.CircleProgress
        android:id="@+id/circle_progress"
        android:layout_marginLeft="50dp"
        custom:circle_unfinished_color="@android:color/black"
        custom:circle_finished_color="#ff66FF"
        custom:circle_text_size="10sp"
        custom:circle_suffix_text="aaa"

        android:layout_width="70dp"
        android:layout_height="70dp"
        custom:circle_progress="80"/>

    <com.github.lzyzsd.circleprogresskt.DonutProgress
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:donut_clockWise="false"
        custom:donut_progress="50"/>

    <com.github.lzyzsd.circleprogresskt.DonutProgress
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:donut_progress="95"
        custom:donut_clockWise="true"
    />
</LinearLayout>
